{
  "tasks": [
    {
      "type": "shell",
      "label": "docker g++ build",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "docker g++ build dir",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        "${fileDirname}/*.h",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/exec.out"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "win g++ build",
      "command": "D:/DevTools/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "D:/DevTools/mingw64/bin"
      }
    }
  ],
  "version": "2.0.0"
}